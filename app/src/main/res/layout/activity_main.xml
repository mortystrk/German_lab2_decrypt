<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bstu.by.decrypt.MainActivity">


    <TextView
        android:id="@+id/tv_cipher_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/tv_secret_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_cipher_text"
        android:layout_below="@+id/tv_cipher_text"
        android:layout_marginTop="22dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_decrypt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_secret_key"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textSize="18sp" />
</RelativeLayout>
